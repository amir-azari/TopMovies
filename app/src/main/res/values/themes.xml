<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/crayola</item>
        <item name="colorPrimaryVariant">@color/chineseBlack</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crayola</item>
        <item name="colorSecondaryVariant">@color/crayola</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Change navigation bar color -->
        <item name="android:navigationBarColor">@color/chineseBlack</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        
        <item name="android:windowBackground">@color/chineseBlack</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />
    <!--textView-->
    <style name="TextViewLightStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>
    <!--TextInputLayout-->
    <style name="CustomOotLineBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/crayola</item>
        <item name="boxStrokeColor">@color/crayola</item>
        <item name="boxBackgroundColor">@color/gunmetal</item>
        <item name="startIconTint">@color/philippineSilver</item>

    </style>
    <!--RoundedImageView-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10mdp</item>
    </style>
</resources>